extends layout

block content
  .row.justify-content-center
    .col-md-6
      h2.text-center.mt-5 Quên mật khẩu
      if message
        p.text-success.text-center= message
      if error
        p.text-danger.text-center= error
      form(action="/auth/forgotpassword" method="POST")
        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email" id="email" name="email" required)
        button.btn.btn-primary.w-100(type="submit") Gửi link đặt lại mật khẩu
      p.text-center.mt-3
        a(href="/auth/login") Quay lại đăng nhập