extends layout

block content
  .row.justify-content-center
    .col-md-6
      h2.text-center.mt-5 Đăng nhập
      if message
        p.text-success.text-center= message
      if error
        p.text-danger.text-center= error
      form(action="/auth/login" method="POST")
        .mb-3
          label.form-label(for="username") Tên người dùng
          input.form-control(type="text" id="username" name="username" required)
        .mb-3
          label.form-label(for="password") Mật khẩu
          input.form-control(type="password" id="password" name="password" required)
        .mb-3
          a(href="/auth/forgotpassword") Quên mật khẩu?
        button.btn.btn-primary.w-100(type="submit") Đăng nhập
      p.text-center.mt-3
        | Chưa có tài khoản? 
        a(href="/auth/signup") Đăng ký