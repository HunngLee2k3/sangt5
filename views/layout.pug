doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href="/") Flower Shop
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/products/view") Products
            li.nav-item
              a.nav-link(href="/cart/view") Cart
            li.nav-item
              a.nav-link(href="/orders/view") Orders
            if isAuthenticated && user.role === 'admin'
              li.nav-item
                a.nav-link(href="/admin") Admin
          ul.navbar-nav.ms-auto
            if isAuthenticated
              li.nav-item
                a.nav-link(href="/addresses") Địa chỉ 
              li.nav-item
                a.nav-link(href="/auth/logout") Đăng xuất (#{user.username})
              
            else
              li.nav-item
                a.nav-link(href="/auth/login") Đăng nhập
              li.nav-item
                a.nav-link(href="/auth/signup") Đăng ký
    .container.mt-4
      block content
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script(src="/javascripts/script.js")